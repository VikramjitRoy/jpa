<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="todos" transaction-type="RESOURCE_LOCAL">
		<class>com.mindtree.entity.Student</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/test1" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="Welcome123" />
			<property name="connection.pool_size" value="1"></property>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"></property>
			<property name="hibernate.show_sql" value="true"></property>
			<property name="hibernate.hbm2ddl.auto" value="create"></property>
			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="false"></property>
		</properties>

	</persistence-unit>
</persistence>